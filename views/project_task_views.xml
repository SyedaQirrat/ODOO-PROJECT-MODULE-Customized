<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_task_form_custom_restrictions" model="ir.ui.view">
        <field name="name">project.task.form.custom.restrictions</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            
            <field name="name" position="after">
                <field name="user_is_manager" invisible="1"/>
                <field name="can_edit_stage" invisible="1"/>
                <field name="parent_id" invisible="1"/>
            </field>

            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="x_crf_number" readonly="not user_is_manager and parent_id"/>
            </xpath>

            <xpath expr="//field[@name='tag_ids']" position="attributes">
                <attribute name="readonly">not user_is_manager and parent_id</attribute>
            </xpath>

            <xpath expr="//header/field[@name='stage_id']" position="attributes">
                <attribute name="readonly">not can_edit_stage</attribute>
            </xpath>

            <xpath expr="//field[@name='date_deadline']" position="attributes">
                <attribute name="readonly">not user_is_manager and id</attribute>
            </xpath>

            <xpath expr="//field[@name='child_ids']/tree/field[@name='date_deadline']" position="attributes">
                <attribute name="optional">show</attribute>
            </xpath>
        </field>
    </record>

</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_task_form_custom_restrictions" model="ir.ui.view">
        <field name="name">project.task.form.custom.restrictions</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <field name="name" position="after">
                <field name="user_is_manager" invisible="1"/>
                <field name="can_edit_stage" invisible="1"/>
            </field>
            <xpath expr="//header/field[@name='stage_id']" position="attributes">
                <attribute name="readonly">not can_edit_stage</attribute>
            </xpath>
            <xpath expr="//field[@name='user_ids']" position="attributes">
                <attribute name="readonly">not user_is_manager</attribute>
            </xpath>
            <xpath expr="//field[@name='date_deadline']" position="attributes">
                <attribute name="readonly">not user_is_manager and id</attribute>
            </xpath>
        </field>
    </record>

    <record id="view_task_kanban_custom_restrictions" model="ir.ui.view">
        <field name="name">project.task.kanban.custom.restrictions</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
            <field name="priority" position="after">
                <field name="user_is_manager"/>
            </field>
            <xpath expr="//field[@name='user_ids']" position="attributes">
                <attribute name="invisible">not user_is_manager</attribute>
            </xpath>
        </field>
    </record>

</odoo>